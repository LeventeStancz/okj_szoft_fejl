        <TextBox x:Name="jelszo_tb" HorizontalAlignment="Left" Height="50" Margin="50,310,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="270" MaxLength="20" FontSize="18" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
