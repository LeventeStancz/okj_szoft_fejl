        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyDrivers"
        mc:Ignorable="d"
        Title="FelhasznaloJelszoKiut" Height="445" Width="375" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None" Background="#FF454545" Foreground="#FFF4F4F4" Loaded="Window_Loaded">
    <Grid>
        <Label Content="Felhasználó jelszavának&#xD;&#xA;módosítása:" Margin="50,30,0,0" VerticalAlignment="Top" Height="70" Foreground="#FFFAFAFA" FontSize="24" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontWeight="Bold" HorizontalAlignment="Left" Width="285"/>
        <Label Content="Kiválasztott felhasználó:" Margin="50,105,0,0" VerticalAlignment="Top" Height="50" Foreground="#FFFAFAFA" FontSize="22" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Width="270"/>
