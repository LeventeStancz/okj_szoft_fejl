        <Image x:Name="BezarGomb" Height="30" Margin="0,10,10.2,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="30" Source="icons8-close-550.png" MouseLeftButtonDown="BezarGomb_MouseLeftButtonDown"/>
